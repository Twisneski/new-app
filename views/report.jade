html
  head
    title=title
    link(href='//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css', rel='stylesheet')
  body
    div.container
      div.page-header
        h1 Reports

        div.btn-toolbar(role='toolbar', aria-label='selectReport')
          h3 Select Report
        form(action='/newLease', method='GET')
          button.btn-group(role='group', aria-label='budVsActual') Budget vs. Actual
        form(action='/report', method='GET')
          button.btn-group(role='group', aria-label='leaseInfo') Lease Information
        form(action='/budget', method='GET')
          button.btn-group(role='group', aria-label='leaseBuilding') Lease by Building
        form(action='/actual', method='GET')
          button.btn-group(role='group', aria-label='leaseProject') Lease by Project

      div.form-group
        div.col-sm-offset-4.col-sm-8
        div.pull-right
          a(href="/") Return to home page

